    <script>
        $(function(){
            $("#success").hide();
            $("#danger").hide(); 
            $("#signup").attr("disabled",true)
            $("input").keyup(function(){
                var pass1 = $("#input_password").val();
                var pass2 = $("#input_confirm").val();
                if(pass1 && pass2){
                        if(pass1 ==pass2){
                        $("#success").show();
                        $("#danger").hide(); 
                        $("#signup").attr("disabled", false);
                    }else{
                        $("#success").hide();
                        $("#danger").show();
                        $("#signup").attr("disabled", true);
                    }
                }else{
                    $("#success").hide();
                    $("#danger").hide();
                    $("#signup").attr("disabled",true)
                }
            })   
        })
    </script>
