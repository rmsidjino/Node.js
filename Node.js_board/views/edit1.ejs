<% extend('header') %>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <div align="right">
    </div>
    <body>
        <div class="container" style="margin-top: 100px;">
            <div align="center">
                <h2>게시글 수정</h2>
            </div>
        
            <form action="/board/edit/<%=article[0].No%>" method="POST">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">번호</span>
                    <input type="text" name ="No" class="form-control" value="<%=article[0].No%>" aria-label="Username" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">제목</span>
                    <input type="text" name ="title" class="form-control" value="<%=article[0].title%>" aria-label="Username" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">내용</span>
                    <textarea class="form-control" name ="content" aria-label="With textarea"><%=article[0].content%></textarea>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">이미지</span>
                    <input type="text" name ="image" class="form-control" value="<%=article[0].image%>" aria-label="Username" aria-describedby="basic-addon1">
                </div>
                <input type="submit" value="글추가">         
            </form>
        </div>
    </body>
</html>